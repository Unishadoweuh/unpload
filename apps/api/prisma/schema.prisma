// Prisma Schema for UnPload

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum OAuthProvider {
  DISCORD
  GOOGLE
  GITHUB
}

enum ShareVisibility {
  PUBLIC
  PRIVATE
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String?        @map("password_hash")
  name          String
  role          UserRole       @default(USER)
  enabled       Boolean        @default(true)
  oauthProvider OAuthProvider? @map("oauth_provider")
  oauthId       String?        @map("oauth_id")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  // Relations
  quota    Quota?
  files    File[]
  folders  Folder[]
  shares   Share[]
  sessions Session[]

  @@unique([oauthProvider, oauthId])
  @@map("users")
}

model Quota {
  id        String @id @default(uuid())
  userId    String @unique @map("user_id")
  maxBytes  BigInt @default(5368709120) @map("max_bytes") // 5GB default
  usedBytes BigInt @default(0) @map("used_bytes")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("quotas")
}

model Folder {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  parentId  String?   @map("parent_id")
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Folder[] @relation("FolderHierarchy")
  files    File[]
  shares   Share[]

  @@index([userId])
  @@index([parentId])
  @@map("folders")
}

model File {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  folderId     String?  @map("folder_id")
  name         String
  originalName String   @map("original_name")
  mimeType     String   @map("mime_type")
  size         BigInt
  storagePath  String   @map("storage_path")
  checksum     String
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  folder Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  shares Share[]

  @@index([userId])
  @@index([folderId])
  @@map("files")
}

model Share {
  id            String          @id @default(uuid())
  slug          String          @unique
  userId        String          @map("user_id")
  fileId        String?         @map("file_id")
  folderId      String?         @map("folder_id")
  visibility    ShareVisibility @default(PUBLIC)
  passwordHash  String?         @map("password_hash")
  expiresAt     DateTime?       @map("expires_at")
  maxDownloads  Int?            @map("max_downloads")
  downloadCount Int             @default(0) @map("download_count")
  viewCount     Int             @default(0) @map("view_count")
  enabled       Boolean         @default(true)
  createdAt     DateTime        @default(now()) @map("created_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  file   File?   @relation(fields: [fileId], references: [id], onDelete: Cascade)
  folder Folder? @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fileId])
  @@index([folderId])
  @@map("shares")
}

model Setting {
  key       String   @id
  value     Json
  category  String
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}
