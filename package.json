{
  "name": "unpload",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted file sharing platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "npm run db:generate --workspace=@unpload/api",
    "db:push": "npm run db:push --workspace=@unpload/api",
    "db:migrate": "npm run db:migrate --workspace=@unpload/api"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.9.0"
}
