# UnPload Caddyfile
# Replace unpload.example.com with your actual domain

{
    email unishadow@etik.com
}

unpload.unishadow.ovh {
    # Frontend
    reverse_proxy unpload:3000

    # API routes
    handle /api/* {
        reverse_proxy unpload:4000
    }

    # Enable compression
    encode gzip

    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
    }
}
