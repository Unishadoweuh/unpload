# Web Dockerfile for production
FROM node:20-alpine AS base
WORKDIR /app

# Install dependencies
FROM base AS deps
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/
COPY packages/shared/package*.json ./packages/shared/
RUN npm ci

# Build shared package
FROM base AS shared-build
COPY package*.json ./
COPY packages/shared ./packages/shared
RUN npm ci && cd packages/shared && npm run build

# Build web app
FROM base AS web-build
COPY --from=deps /app/node_modules ./node_modules
COPY --from=shared-build /app/packages/shared ./packages/shared
COPY apps/web ./apps/web
COPY tsconfig.json ./
WORKDIR /app/apps/web

# Build-time environment variables
ARG NEXT_PUBLIC_API_URL=/api
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

RUN npm run build

# Production image
FROM node:20-alpine AS production
WORKDIR /app

# Create non-root user
RUN addgroup -S unpload && adduser -S unpload -G unpload

# Copy entire standalone build (server.js is at root, node_modules included)
COPY --from=web-build /app/apps/web/.next/standalone ./
# Copy static files to the correct location within the monorepo structure
COPY --from=web-build /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=web-build /app/apps/web/public ./apps/web/public

# Set ownership
RUN chown -R unpload:unpload /app

USER unpload

ENV NODE_ENV=production
ENV PORT=3000
ENV HOSTNAME=0.0.0.0

EXPOSE 3000

# server.js is at the root of standalone output
CMD ["node", "server.js"]
